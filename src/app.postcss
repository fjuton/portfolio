@import url('https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700;800&display=swap');

@tailwind base;
:root {
	font-family: 'JetBrains Mono', monospace;
	overflow-x: hidden;
	user-select: none;
}

::-webkit-scrollbar {
	width: 10px;
}

::-webkit-scrollbar-track {
	background: theme('textColor.neutral.900');
}

::-webkit-scrollbar-thumb {
	background: theme('textColor.pink.500');
	transition: 0.2s all;
}


@tailwind components;
@tailwind utilities;
